---
import { Image } from "astro:assets";
import profile from "../images/profile.jpg"
import SocialLink from "./SocialLink.astro";
import BrandGithub from "./icons/brand-github.astro"
import BrandLinkedin from "./icons/brand-linkedin.astro"
import { GITHUB_PAGE, LINKEDIN_PAGE, NAME } from "../consts";
---

<div class="flex flex-col gap-4">
    <Image 
        src={profile}
        alt="Profile pic of me"
        class="rounded-md"
        width={80}
        height={80}
        densities={[1.5, 2]}
        loading="eager"
    />
    <div>
        <h1 class="mb-1 text-3xl font-bold text-main">{NAME}</h1>
        <p class="text-muted">UW-Madison CS student, musician, programmer</p>
    </div>
    <div class="flex flex-col gap-1">
        <SocialLink text="jamesjulich" href={GITHUB_PAGE}><BrandGithub /></SocialLink>
        <SocialLink text="james-julich" href={LINKEDIN_PAGE}><BrandLinkedin /></SocialLink>
    </div>  
</div>